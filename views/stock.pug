extends layout.pug

block append meta
  title #{title}
  meta(name="description" content=description)
  meta(name="keywords" content=name + ", azioni, prezzo, dividendo, medie, performance, resistenze, supporti, valutazione, rating, tendenze, commento, trend")

  link(rel="canonical", href=proj_url + url)

  meta(name="og:url" content=proj_url + url)
  meta(name="og:type" content="website")
  meta(name="og:title" content=title)
  meta(name="og:site_name" content=proj_name)
  meta(name="og:description" content=description)
  meta(name="og:image" content=og_image)

  link(rel="stylesheet", href="/styles/views/stock.css")
  script(src='/scripts/stock.js', type='module', defer)

block main
  div(class="content")
    include ../components/stock/stock-head.pug

    //- include ../marketing/ava-banner/ava-banner.pug

    include ../components/stock/stock-top-data.pug

    include ../components/stock/follow-the-stock.pug

    include ../components/stock/stock-analyses.pug

    //- include ../marketing/ava-banner/ava-banner2.pug
  
    include ../components/stock/stock-news.pug
    //- include ../components/stocks_list/stocks_list.pug 
    include ../components/shared/share/share.pug

    include ../marketing/ava-banner/ava-banner2.pug
  include ../components/shared/column/column.pug

block prepend outro
  include ../components/shared/disclaimer/disclaimer.pug